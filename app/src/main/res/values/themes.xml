<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JookaTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color_200</item>
        <item name="colorPrimaryVariant">@color/main_color_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_color_200</item>
        <item name="colorSecondaryVariant">@color/second_color_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //Card background
    <style name="CustomCardBackground">
        <item name="android:background">@drawable/ripple_rounded</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    //Main background
    <style name="RoundedMainBackground">
        <item name="android:background">@drawable/background_rounded</item>
    </style>
    <style name="MainBackground">
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="MainBackgroundSemiTransparent">
        <item name="android:background">@drawable/background_semi_transparent</item>
    </style>

    //Icon clickable
    <style name="IconCircleClickableStyle">
        <item name="android:tint">@color/dark_500</item>
        <item name="android:background">@drawable/ripple_circle</item>
    </style>
</resources>