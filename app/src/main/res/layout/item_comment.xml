<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image_sender"
        android:layout_width="@dimen/default_thumbnail_size"
        android:layout_height="@dimen/default_thumbnail_size"
        android:src="@color/default_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/default_thumbnail_size"
        android:scaleType="centerCrop"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linear_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_sender"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        style="@style/RoundedMainBackground"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_comment_sender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toTopOf="@+id/linear_content"
        app:layout_constraintStart_toStartOf="@+id/linear_content"
        app:layout_constraintEnd_toEndOf="@+id/linear_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="@dimen/text_title_size"
        android:text="Comment sender"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_comment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@+id/text_comment_sender"
        app:layout_constraintStart_toStartOf="@+id/linear_content"
        app:layout_constraintEnd_toEndOf="@+id/linear_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="3 min ago"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_comment_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@+id/text_comment_date"
        app:layout_constraintStart_toStartOf="@+id/linear_content"
        app:layout_constraintEnd_toEndOf="@+id/linear_content"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:paddingBottom="@dimen/default_margin"
        android:textSize="@dimen/text_desc_size"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur orci orci, bibendum ut gravida at, fermentum eu turpis. Praesent commodo a neque ac cursus."
        />
</androidx.constraintlayout.widget.ConstraintLayout>